{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=.\\SQLEXPRESS;Database=HoneyBadgers;Trusted_Connection=True;MultipleActiveResultSets=True;"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "connectionString": "Data Source=.\\SQLEXPRESS;Initial Catalog=HoneyBadgers;Integrated Security=True",
          "tableName": "LogEvents",
          "columnOptionsSection": {
            "removeStandardColumns": [ "MessageTemplate" ],
            "customColumns": [
              {
                "ColumnName": "UserName",
                "DataType": "nvarchar",
                "DataLength": 100
              }
            ]
          },
          "autoCreateSqlTable": true
        } 
      }
    ] 
  } 
}
