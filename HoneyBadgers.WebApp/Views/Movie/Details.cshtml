@model HoneyBadgers.Logic.Dto.MovieDto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Title"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Year"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Year
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Director"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Director
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Writer"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Writer
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Actors"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Actors
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Plot"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Plot
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Genre"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Genre
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Country"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Country
        </dd>
        <dt class="col-sm-2">
            <label asp-for="ImdbRating"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.ImdbRating
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Poster"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Poster
        </dd>
        <dt class="col-sm-2">
            <label asp-for="ViewsNumber"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.ViewsNumber
        </dd>
        <div class="col-md-2">
            @if (Model.IsFavorite)
            {
                <i class="fas fa-heart"></i>
                <p>This movie is currently favorite on your movies list! </p>
            }
            else
            {
                <i class="far fa-heart"></i>
            }
        </div>
    </dl>
</div>
<div>
