@using Microsoft.AspNetCore.Identity
@using HoneyBadgers.Entity.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="hb-login navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-controller="Account" asp-action="Index">
            <div class="d-flex flex-nowrap">
                <div class="account-circle">
                    <i class="fas fa-user-alt"></i>
                </div>
                <div class="account-name">
                    @UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.LastName
                </div>
            </div>
        </a>
    </li>
    @* <li class="nav-item"> *@
    @*     <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"> *@
    @*         <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button> *@
    @*     </form> *@
    @* </li> *@
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a>
    </li>
}
</ul>
