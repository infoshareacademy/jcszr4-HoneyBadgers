@model IEnumerable<HoneyBadgers.Logic.Models.FavoriteMoviesViewModel>

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>
                <label asp-for="First().Title"></label>
            </th>
            <th>
                <label asp-for="First().Director"></label>
            </th>
            <th>
                <label asp-for="First().Genre"></label>
            </th>
            <th>
                <label asp-for="First().ImdbRating"></label>
            </th>
            <th>
                <label asp-for="First().Poster"></label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @item.Title
            </td>
            <td>
                @item.Director
            </td>
            <td>
                @item.Genre
            </td>
            <td>
                @item.ImdbRating
            </td>
            <td>
                @item.Poster
            </td>
        </tr>
}
    </tbody>
</table>
